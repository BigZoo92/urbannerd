generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StatusUser {
  Unconfirmed
  Confirmed
}

model User {
  id          Int         @id @default(autoincrement())
  username    String      @unique
  email       String      @unique
  password    String
  status      StatusUser
  posts       Post[]
  comments    Comment[]
  postLikes   PostLike[]
  postReposts PostRepost[]
}

model Post {
  id          Int        @id @default(autoincrement())
  content     String?
  files      String[]   @default([])
  createdAt   DateTime   @default(now())
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
  comments    Comment[]
  postLikes   PostLike[]
  postReposts PostRepost[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String?
  createdAt DateTime @default(now())
  userId    Int
  postId    Int
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
}

model PostLike {
  id        Int      @id @default(autoincrement())
  userId    Int
  postId    Int
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
}

model PostRepost {
  id        Int      @id @default(autoincrement())
  userId    Int
  postId    Int
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
}
