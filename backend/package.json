    "start": "node dist/index.js",
    "copytemplates": "copyfiles ./src/templates dist/templates",
    "createuploads": "copyfiles -u 1 src/**/*.html src/**/*.css dist/ && copyfiles ./uploads/ ./dist/",
    "tscheck": "tsc --noEmit --project tsconfig.json",
    "prismagenerate": "npx prisma generate --schema=./src/prisma/schema.prisma && npx prisma migrate deploy --schema=./src/prisma/schema.prisma",
    "build": "npm run tscheck && rimraf dist && npm run prismagenerate && tsc && npm run copytemplates && npm run createuploads",
